<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
     backupStaticAttributes="false"
     colors="true"
     convertErrorsToExceptions="true"
     convertNoticesToExceptions="true"
     convertWarningsToExceptions="true"
     processIsolation="false"
     stopOnFailure="false"
     syntaxCheck="false"
     bootstrap="./bootstrap.php"
    >
    <testsuites>
        <testsuite name="Keyworddensity Checker Test Suite">
            <directory>./KeywordDensity/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>../src/KeywordDensity/</directory>
            <exclude>
                <file>../src/KeywordDensity/Autoload/ClassLoader.php</file>
            </exclude>
        </whitelist>
    </filter>
</phpunit>